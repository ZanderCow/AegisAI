# Copy this file to .env and fill in values for your environment.
# .env is git-ignored and should never be committed.

# ----- Application -----
APP_NAME=AegisAI
APP_VERSION=0.1.0
ENVIRONMENT=development   # development | staging | production
DEBUG=false

# Logging
# Leave blank to use environment defaults:
# - development: DEBUG text logs
# - production: WARNING json logs
# LOG_LEVEL=DEBUG
# JSON_LOGS=false
# UVICORN_ACCESS_LOG=true

# API surface / transport security
# ENABLE_DOCS=true
ENFORCE_HTTPS=false
ALLOWED_HOSTS=["*"]

# ----- Database -----
# Full SQLAlchemy async DSN (postgresql+asyncpg://user:pass@host:port/db)
DATABASE_URL=postgresql+asyncpg://test_admin:test_password@localhost:5433/aegis_test_db
# SQL_ECHO=true
# AUTO_CREATE_TABLES=true

# ----- Security / JWT -----
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_use_openssl_rand_hex_32_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ----- CORS -----
# JSON array of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ----- Production overrides (example) -----
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# JSON_LOGS=true
# UVICORN_ACCESS_LOG=false
# ENABLE_DOCS=false
# ENFORCE_HTTPS=true
# ALLOWED_HOSTS=["your-api-domain.up.railway.app","api.yourdomain.com"]
# SQL_ECHO=false
# AUTO_CREATE_TABLES=false
# CORS_ORIGINS=["https://your-frontend-domain.com"]
# SECRET_KEY=<set in Railway Variables>
